<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Sudoku.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{DynamicResource MainBackgroundColor}" />
                <Setter Property="BarTextColor" Value="{DynamicResource MainForegroundColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>